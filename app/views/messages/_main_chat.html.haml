.Chat
  .Chat__RightHeader
    .Chat__RightHeader--group
      .groupName
        = @group.name
      .memberList
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .Chat__RightHeader--editButton
      = link_to "http://localhost:3000/groups/1/edit", class: "editButton" do
        Edit

  .Chat__MessageField
    = render @messages

  .Chat__Footer
    .Chat__Footer--Form
      = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
        .Form__contents
          = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
          = f.label :image, class: 'Form__inputImage' do
            = icon('far', 'image', class: 'Form__icon')
            = f.file_field :image, class: 'Hidden'
        = f.submit 'Send', class: 'Form__submit'